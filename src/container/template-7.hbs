<header class="header">
    {{> headerDark}}
</header>
<main class="main">
    <div class="hero">
        {{#with hero}}
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_description">{{description}}</p>
        {{#with button}}
        <a href="{{url}}" class="hero_button">{{text}}</a>
        {{/with}}
        {{/with}}
    </div>
    <div class="about_shop">
        {{#with about}}
        <h2 class="about_shop_heading">{{heading}}</h2>
        <p class="about_shop_info">{{info}}</p>
        {{/with}}
    </div>
    <div class="articles">
        <h2 class="articles_header">Our articles</h2>
        <div class="articles_block">
            {{> articleCardDark}}
        </div>
    </div>
</main>
<footer class="footer">
    {{> footerDark}}
</footer>