<header class="header ">
    <a href="#test">
        {{> logo}}
    </a>
    <nav class="header_nav  ">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>

</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>
    </div>
    {{/with}}
    {{#with form}}
    <form class="form">
        <div class="form_inputs_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>
        <div class="form_checkbox_block">
            <input type="checkbox" name="{{checkbox.name}}">
            <label>{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>
<div class="updates">
    {{#with updates}}
    <h1 class="updates_title">{{title}}</h1>
    {{#each list}}
    <div class="msg">
        <div><img class="msg_img"></div>
        <div><strong class="msg_name">{{nickname}}</strong>
            <p class="msg_text">{{description}}</p>
        </div>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="messages_link">{{text}}</a>
    {{/with}}
    {{/with}}
</div>
<div class="experience">
    {{#with experience}}
    <div class="experience_header">
        <strong class="experience_title">{{title}}</strong>
        <p class="experience_badge">{{badge}}</p>
    </div>
    <div class="experience_list">
        {{#each list}} <div class="list_item">
            <strong class="list_name">{{name}}</strong>
            <p class="list_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>
<footer class="footer" id="test">
    <div>
        {{> logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>